# Application Settings
ENVIRONMENT=development
DEBUG=True

# Supabase Configuration
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Database Configuration
DB_USER=
DB_PASSWORD=
DB_HOST=
DB_PORT=
DB_NAME=

# External APIs (Required)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
EXA_API_KEY=your-exa-api-key-here

# Optional API Keys for Alternative LLM Providers
# Uncomment and configure if using non-Anthropic models
# FIREWORKS_API_KEY=your-fireworks-api-key-here

# LLM Model Configuration (Hot-swappable)
# Format: {provider}:{model-identifier}
# Leave commented to use defaults (Fireworks Kimi K2p5)

# Template Parser Model (default: fireworks:accounts/fireworks/models/kimi-k2p5)
# Fast structured extraction - use lightweight models for cost optimization
# TEMPLATE_PARSER_MODEL=anthropic:claude-haiku-4-5
# TEMPLATE_PARSER_MODEL=fireworks:accounts/fireworks/models/kimi-k2p5

# Email Composer Model (default: fireworks:accounts/fireworks/models/kimi-k2p5)
# Creative, high-quality writing - use powerful models for best output
# EMAIL_COMPOSER_MODEL=anthropic:claude-sonnet-4-5
# EMAIL_COMPOSER_MODEL=fireworks:accounts/fireworks/models/kimi-k2p5

# Template Generator Model (default: fireworks:accounts/fireworks/models/kimi-k2p5)
# Resume parsing and template generation
# TEMPLATE_GENERATOR_MODEL=anthropic:claude-haiku-4-5
# TEMPLATE_GENERATOR_MODEL=fireworks:accounts/fireworks/models/kimi-k2p5

# Redis Configuration (for Celery)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logfire Observability
LOGFIRE_TOKEN=

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=INFO